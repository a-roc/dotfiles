<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal emulator">
			<action name="Execute">
				<execute>terminator</execute>
			</action>
		</item>
		<item label="Web browser">
			<action name="Execute">
				<execute>firefox-esr</execute>
			</action>
		</item>
		<separator/>
		<menu execute="xdg_menu --root-menu ~/.config/menus/mate-applications.menu --format openbox3-pipe" id="applications-pipemenu" label="Applications"/>
		<separator/>
		<menu id="settings-menu" label="Settings">
			<item label="XFCE Settings">
				<action name="Execute">
					<command>xfce4-settings-manager</command>
				</action>
			</item>
			<menu label="Openbox" id="ob-settings-menu">
			<item label="Edit rc.xml">
				<action name="Execute">
					<command>terminator -p minimal -e "vim ~/.config/openbox/rc.xml"</command>
				</action>
			</item>
			<item label="Edit menu.xml">
				<action name="Execute">
					<command>terminator -p minimal -e "vim ~/.config/openbox/rc.xml</command>
				</action>
			</item>
			<item label="Edit compton.conf">
				<action name="Execute">
					<command>terminator -p minimal -e "vim ~/.config/compton.conf</command>
				</action>
			</item>
			<item label="ObConf">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
			</item>
			<item label="Reconfigure">
				<action name="Reconfigure"/>
			</item>
			<item label="Restart">
				<action name="Restart"/>
			</item>
		</menu>
		</menu>
		<separator/>
		<menu id="client-list-menu"/>
		<separator/>
		<item label="Exit">
			<action name="Execute">
				<execute>xfce4-session-logout</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
